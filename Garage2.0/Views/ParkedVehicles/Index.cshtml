@model IEnumerable<Garage2._0.Models.ParkedVehicle>

@{
    ViewBag.Title = "Index";
}

<h2>Parked in Joe's Garage</h2>

<button class="button-link">@Html.ActionLink("Check in", "Create", new { searchProp = ViewBag.SearchProp, searchValue = ViewBag.SearchValue })</button>
<div id="searchBox">
    <h3>Search</h3>
    Property: <select name="searchProp" form="searchform" id="searchProp" onchange="AdaptForm()">
        <option value="RegNo">Reg No</option>
        <option value="Type">Type</option>
        <option value="Colour">Colour</option>
        <option value="TimeParked">Time Parked</option>
    </select>
    <br><div style="float: left;">Value:</div> 
    <form id="searchform" style="float:right;">
        <input name="searchValue" id="select" type="text" />
        <input type="submit">
    </form>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RegNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Colour)
        </th>
        <th>
            Time Parked
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RegNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Colour)
        </td>
        <td>
            @{
                var timeParked = DateTime.Now - item.CheckInTime;
                string displayTime = "";
                if (timeParked.Days > 0)
                {
                    displayTime = displayTime + timeParked.Days + " days ";
                }
                displayTime = displayTime + timeParked.Hours + " hours " + timeParked.Minutes + " minutes";
            }
            @displayTime
        </td>
        <td>
            <button>
                @Html.ActionLink("Details", "Details", new { id = item.Id, searchProp = ViewBag.SearchProp, searchValue = ViewBag.SearchValue })
            </button>
            <button>
                @Html.ActionLink("Check out", "Delete", new { id = item.Id, searchProp = ViewBag.SearchProp, searchValue = ViewBag.SearchValue })
            </button>
        </td>
    </tr>
}

</table>

<div id="backLink">
    @{
        if (ViewBag.InsertLink)
        {
            <button>@Html.ActionLink("To vehicle overview", "Index")</button>
        }
    }
</div>

<script>
    AdaptForm = function ()
    {
        form = document.getElementById("searchform")
        form.removeChild(document.getElementById("select"))
        if (document.getElementById("searchProp").value == "Type")
        {
            var array = ["Car", "Bus", "Airplane", "Motorcycle", "Boat"]
            var select = document.createElement("select");
            select.name = "searchValue";
            select.id = "select";
            form.insertBefore(select, form.firstChild);

            for (var i = 0; i < array.length; i++)
            {
                var option = document.createElement("option");
                option.value = array[i];
                option.text = array[i];
                select.appendChild(option);
            }
        }
        else
        {
            var text = document.createElement("input");
            text.setAttribute("type", "text");
            text.setAttribute("name", "searchValue")
            text.id = "select";
            form.insertBefore(text, form.firstChild);
        }
    }

