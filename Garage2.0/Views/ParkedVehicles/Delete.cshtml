    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Check out" class="btn btn-default" />
        </div>
    }
    <br />
    @{
        string backToStr = "To " + ViewBag.SearchValue + " overview";
        if (ViewBag.SearchProp != null)
        {
            <button>
                @Html.ActionLink(backToStr, "Index", new { searchProp = ViewBag.SearchProp, searchValue = ViewBag.SearchValue })
            </button>
            <br />
            <br />
        }
